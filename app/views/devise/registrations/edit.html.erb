<div class="container">
  <h2 class="page_title">ユーザー情報の変更</h2>
  <div class="item_field">
    <div class="item_block">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

            <table class="input_table">
              <tr>
                <td class="label_name" align="right"><%= f.label :お名前： %></td>
                <td class="input_field"><%= f.text_field :name %></td>
              </tr>
              <tr>
                <td class="label_name" align="right"><%= f.label :性別： %></td>
                <td class="input_field">
                  <select name="user[gender_id]">
                    <% @genders.each do |gender| %>
                      <option <% if current_user.gender_id.present? %>
                        <%= "selected" if gender.id == current_user.gender.id %>
                        <% end %> value = <%= gender.id %> > <%= gender.gender_type %>
                      </option>
                    <% end %>
                  </select>
                </td>
              </tr>
              <tr>
                <td class="label_name" align="right"><%= f.label :誕生日： %></td>
                <td class="input_field">
                  <%= raw sprintf(
                                f.date_select(
                                  :birthday,
                                  use_month_numbers: true,
                                  start_year: 1930,
                                  date_separator: '%s'),
                                '年 ', '月 ') + '日' %>
                </td>
              </tr>









              <tr>
                <td class="label_name" align="right"><%= f.label :メールアドレス： %></td>
                <td class="input_field"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
              </tr>
              <tr>
                <td class="label_name" align="right"><%= f.label :パスワード： %></td>
                <td class="input_field"><%= f.password_field :password, autocomplete: "new-password" %></td>
              </tr>
              <tr>
                <td></td>
                <td>
                  <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> 文字以上で設定してください。)</em><br />
                  <% end %>
                </td>
              </tr>
              <tr>
                <td class="label_name" align="right"><%= f.label :パスワード（確認）： %></td>
                <td class="input_field"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
              </tr>
              <tr>
                <td class="label_name" align="right"><%= f.label :現在のパスワード： %></td>
                <td class="input_field"><%= f.password_field :current_password, autocomplete: "current-password" %></td>
              </tr>
            </table>
        <div class="submit_btn">
          <%= f.submit "ユーザー情報を更新する" %>
        </div>
    </div>
  </div>
    <div class="item_block">
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

<% end %>

  <h2 class="page_title">退会</h2>
<div class="submit_btn">
<p>退会しますか? <%= button_to "退会する", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
</div>
<%= link_to :前に戻る, :back %>

    </div>

</div>


