
  <div class="container">
    <h2 class="page_title">新規登録</h2>
    <div class="item_field">
      <div class="item_block">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>



        <table class="input_table">
          <tr>
            <td class="label_name" align="right"><%= f.label :名前： %></td>
            <td class="input_field"><%= f.text_field :name %></td>
          </tr>
          <tr>
            <td class="label_name" align="right"><%= f.label :パスワード： %></td>
            <td class="input_field"><%= f.password_field :password, autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <td></td>
            <td>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> 文字以上で設定してください。)</em>
              <% end %>
            </td>
          </tr>
          <tr>
            <td class="label_name" align="right"><%= f.label :パスワード（確認） %></td>
            <td class="input_field"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <td class="label_name" align="right"><%= f.label :生年月日 %></td>
              <td class="input_field">
              <%= raw sprintf(
                f.date_select(
                  :birthday,
                  use_month_numbers: true,
                  start_year: 1930,
                  end_year: (Time.now.year - 18),
                  default: Date.new(1989, 1, 1),
                  date_separator: '%s'),'年 ', '月 ') + '日' %>
              </td>
          </tr>
          <tr>
            <td class="label_name" align="right"><%= f.label :性別 %></td>
            <td class="input_field">
              <select name="user[gender_id]">
                <% @genders.each do |gender| %>
                  <option  value = <%= gender.id %> >
                    <%= gender.gender_type %>
                  </option>
                <% end %>
              </select>
            </td>
          </tr>
        </table>

        <div class="submit_btn">
          <div class="actions">
            <%= f.submit "登録する" %>
          </div>
        </div>

      <% end %>
      </div>
      <div class="submit_btn">
        <%- if controller_name != 'sessions' %>
          <%= link_to "ログインはこちら", new_session_path(resource_name) %><br />
        <% end -%>
      </div>
    </div>
  </div>