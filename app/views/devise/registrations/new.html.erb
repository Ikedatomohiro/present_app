
  <div class="container">
    <h2>新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "Eメール" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>


      <div class="field">
        <%= f.label "ユーザー名" %><br />
        <%= f.text_field :name %>
      </div>


      <%= "店名"%>
      <%= text_field_tag 'shop[name]' %>

      <%= "Webサイト"%>
      <%= text_field_tag 'shop[web_site]' %>

      <%= "ショップメールアドレス"%>
      <%= text_field_tag 'shop[mail]' %>


      <div class="actions">
        <%= f.submit "登録する" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>