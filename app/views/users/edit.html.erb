<%= render "shared/header" %>

<% content_for :title do %>
  User information
<% end %>

<div id="page-comment">
  User information
</div>

<%= form_for @user, :url => {:action => 'update'} do |form| %>
  <%= form.label :お名前 %>
  <%= form.text_area :name %>
  <%= form.label :性別 %>
    <select name="user[gender]">
      <% @genders.each do |gender| %>
        <option <% if current_user.gender.present? %><%= "selected" if gender.gender == current_user.gender %><% end %> value = <%= gender.gender %> > <%= gender.gender_type %>
        </option>
      <% end %>
    </select>
      <%= form.label :誕生日 %>
      <%= raw sprintf(
        form.date_select(
          :birthday,
          use_month_numbers: true,
          start_year: 1930,
          end_year: (Time.now.year - 18),
          default: Date.new(1989, 1, 1),
          date_separator: '%s'),
        '年 ', '月 ') + '日' %>

	<input type = "submit" value ="ユーザー情報を変更する">
<% end %>
名前:<%= current_user.name %>
eメール:<%= current_user.email %>
パスワード:<%= current_user.password %>
性別:<%= current_user.gender %>
誕生日:<%= current_user.birthday %>
メール:<%= current_user.email %>
ID:<%= current_user.id %>