<%= render "shared/header" %>

<% purpose = Purpose.find(@product.purpose_number) %>


<%= link_to("編集", "/products/#{@product.id}/edit") %>
<%= button_to("削除", "/products/#{@product.id}/destroy", {method: "post"}) %>
<p>商品名：<%= @product.name %></p>
<p>特徴：<%= @product.characteristic %></p>
<p>ホームページ：<%= link_to(@product.product_hp, "#{@product.product_hp}") %></p>
<p>価格：<%= number_to_currency(@product.price, :locale => 'jp') %></p>
<p>目的：<%= purpose.purpose %></p>

<img src= "<%= "/product_images/#{@product.image}" %>"><br>


<%= link_to "この商品を買う", products_user_purchase_path(:product_id => @product.id) %>


<%= link_to "買い物カゴに入れる", basket_path(:product_id => @product.id, :user_id => current_user.id) %> <br>

<%= form_tag("/baskets") do %>

<%= link_to "買い物カゴに入れる", controller: "baskets", action: "create", :user_id => current_user.id, :product_id => @product.id %>

<% end %>


